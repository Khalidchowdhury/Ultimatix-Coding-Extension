{
  "name": "ultimatix-coding",
  "displayName": "Ultimatix Coding",
  "description": "A comprehensive support extension with snippets and an AI assistant for WordPress, ACF, Bootstrap, and CSS development.",
  "version": "1.4.0",
  "publisher": "ultimatix-coding",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:html",
    "onLanguage:css",
    "onView:ultimatix.aiAssistantView"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ultimatix-coding.askAI",
        "title": "Ask Ultimatix AI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ultimatix-assistant-view-container",
          "title": "Ultimatix AI",
          "icon": "assets/assistant-icon.png"
        }
      ]
    },
    "views": {
      "ultimatix-assistant-view-container": [
        {
          "id": "ultimatix.aiAssistantView",
          "name": "Chat",
          "type": "webview",
          "contextualTitle": "Ultimatix AI"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cross-fetch": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-highlightjs": "^4.2.0",
    "node-fetch": "^2.7.0",
    "undici": "^7.13.0",
    "highlight.js": "^11.9.0",
    "form-data": "^4.0.0"
  }
}